@using Microsoft.AspNetCore.Http;
@{
    Layout = null;
}
<nav class="header-navbar navbar-expand-lg navbar navbar-fixed align-items-center navbar-shadow navbar-light" data-nav="brand-center">
    <div class="navbar-container d-flex align-items-center justify-content-between w-100">
        <!-- Logo di kiri -->
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "CustomerPage")">
            <span class="brand-logo me-1">
                <!-- Ikon Kopi SVG -->
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24" fill="currentColor">
                    <path d="M18 8h1a3 3 0 0 1 0 6h-1v1a3 3 0 0 1-3 3H6a3 3 0 0 1-3-3V8h15zm1 4a1 1 0 0 0 0-2h-1v2h1zm-3 3V10H5v5a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1zM8 2h2v3H8V2zm4 0h2v3h-2V2zM4 2h2v3H4V2z"/>
                </svg>
            </span>
            <h2 class="brand-text mb-0">KopiKodir</h2>
        </a>
    </div>
    <div class="navbar-container d-flex content">

        <ul class="nav navbar-nav align-items-center ms-auto">
            <li class="nav-item nav-search"><a class="nav-link nav-link-search"><i class="ficon" data-feather="search"></i></a>
                <div class="search-input">
                    <div class="search-input-icon"><i data-feather="search"></i></div>
                    <input class="form-control input" type="text" placeholder="Cari..." tabindex="-1" data-search="search">
                    <div class="search-input-close"><i data-feather="x"></i></div>
                    <ul class="search-list search-list-main"></ul>
                </div>
            </li>
            <li class="nav-item dropdown dropdown-cart me-25" >
                <a class="nav-link" href="#" data-bs-toggle="dropdown">
                    <i class="ficon" data-feather="shopping-cart"></i>
                    <span class="badge rounded-pill bg-primary badge-up cart-item-count" id="KeranjangCount">0</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-media dropdown-menu-end container-card" style="width: 350px;" id="keranjang">
                    
                </ul>
            </li>
            <li class="nav-item dropdown dropdown-user"><a class="nav-link dropdown-toggle dropdown-user-link" id="dropdown-user" href="#" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="user-nav d-sm-flex d-none">
                        <span class="user-name fw-bolder">@Context.Session.GetString("Nama")</span>
                        <span class="user-status">@Context.Session.GetString("Role")</span>
                    </div>
                    <span class="avatar">
                        <img class="round" src="~/app-assets//images/portrait/small/avatar-s-11.jpg" alt="avatar" height="40" width="40">
                        <span class="avatar-status-online"></span>
                    </span>
                </a>
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdown-user">
                    <a class="dropdown-item" href="@Url.Action("Profile", "CustomerPage")">
                        <i class="me-50" data-feather="user"></i> Profile
                    </a>
                    @if(Context.Session.GetString("Role") == "admin") {
                        <a class="dropdown-item" href="@Url.Action("Index", "Dashboard")">
                            <i class="me-50" data-feather="shield"></i> Admin
                        </a>
                    }
                    @{
                        var email = Context.Session.GetString("Email");
                    }
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="Auth/Logout/@email" onclick="confirm('Yakin ingin logout?')">
                        <i class="me-50" data-feather="power"></i> Logout
                    </a>
                </div>
            </li>
        </ul>
    </div>
</nav>
